<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.codetribe.mynfirst.ProfileActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:elevation="10dp"
        android:layout_centerHorizontal="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Learner's Details"
       android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />


    <TextView
        android:id="@+id/editname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_above="@+id/editgender"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <TextView


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Parents's Details"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/editParentN"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/editsurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="SurName"
        android:layout_alignBaseline="@+id/editname"
        android:layout_alignBottom="@+id/editname"
        android:layout_alignStart="@+id/editgender" />

    <TextView
        android:id="@+id/editaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="address"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/editgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Gender"
        android:layout_marginStart="21dp"
        android:layout_alignBaseline="@+id/editdate"
        android:layout_alignBottom="@+id/editdate"
        android:layout_toEndOf="@+id/editaddress" />

    <TextView
        android:id="@+id/editdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Date of bith"
        android:layout_above="@+id/editaddress"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/editParentN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="parent Name"
        android:layout_alignBaseline="@+id/editParentC"
        android:layout_alignBottom="@+id/editParentC"
        android:layout_toEndOf="@+id/editParentC" />

    <TextView
        android:id="@+id/editParentC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="parent contacts"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/saveData"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:onClick="save"
        android:id="@+id/saveData"

        android:layout_above="@+id/view"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:text="view profile"
        android:onClick="view"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
