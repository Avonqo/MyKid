<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.codetribe.mynfirst.ProfileActivity"
    android:orientation="vertical">


    <TextView

        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Learner's Details"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Learner's Details"
        android:textStyle="bold" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Learner's Details"
       android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/editname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Parents's Details"
        android:textStyle="bold"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/editdate"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/editsurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="SurName"
        android:layout_alignBaseline="@+id/editname"
        android:layout_alignBottom="@+id/editname"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="35dp" />

    <TextView
        android:id="@+id/editaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="address"
        android:layout_below="@+id/editdate"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/editgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Gender"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/editname"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/editdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Date of bith"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editgender"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/editParentN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="parent Name"
        android:layout_alignBaseline="@+id/editParentC"
        android:layout_alignBottom="@+id/editParentC"
        android:layout_toEndOf="@+id/editParentC" />

    <TextView
        android:id="@+id/editParentC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="parent contacts"
        android:layout_above="@+id/saveData"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="68dp" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:onClick="save"
        android:id="@+id/saveData"

        android:layout_above="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:text="view profile"
        android:onClick="view"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
