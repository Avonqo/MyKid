<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="za.co.codetribe.kid.ProfileActivity"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/factfile">

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/profilepicture"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="120dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:gravity="center"-->
        <!--android:layout_marginBottom="25dp"-->
        <!--android:src="@drawable/profile" />-->
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:src="@drawable/profile" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageButton"
            android:layout_gravity="start"
            android:paddingLeft="22dp"
            android:text=" Profile    "
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Child"
            android:textSize="30sp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Full Name(s)"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editname"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="textPersonName" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Surname"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editsurname"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Age"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editage"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="number" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Date of Birth"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editdate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="date" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Favourite Meal"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editmeal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Allergies"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editallergies"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Surname"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editaddress"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="textPostalAddress" />




    <TextView
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parent"
        android:layout_gravity="center"
        android:textSize="20sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Name"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editParentN"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Contact"
        android:paddingLeft="22dp"
        />

    <EditText
        android:id="@+id/editParentC"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bkg"
        android:inputType="textPersonName" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:alpha="0.90"
        android:background="@drawable/gradient2"
        android:clickable="true"
        android:padding="16dp"
        android:text="UPDATE"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>
    </ScrollView>
</LinearLayout>