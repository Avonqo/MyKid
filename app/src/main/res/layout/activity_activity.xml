<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.codetribe.kid.EventsActivity"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/factfile" />

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/events"
        android:elevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingLeft="22dp"
        android:text=" Activity    "
        android:textSize="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignStart="@+id/imageHome" />




            <EditText
                android:id="@+id/activityComment"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:background="@drawable/gradient3"
                android:hint="   Weekly comments"
                android:layout_above="@+id/saveData"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22dp" />

            <Button
                android:id="@+id/saveData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gradient2"
                android:text="ADD WEEKLY ACTIVITY"
                android:textColor="#fff"
                android:layout_marginLeft="23dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/imgbImage2"
                android:scaleType="fitXY"
                android:pointerIcon="alias"
                android:background="@drawable/gradient3"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="64dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best of the week"
        android:textColor="#8E24AA"
        android:id="@+id/textView5"
        android:layout_below="@+id/imgbImage2"
        android:layout_alignStart="@+id/imgbImage2"
        android:layout_marginStart="11dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/imgbImage1"
                android:scaleType="fitXY"
                android:background="@drawable/gradient3"
                android:layout_above="@+id/textView5"
                android:layout_toStartOf="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worst of the week"
        android:textColor="#8E24AA"
        android:id="@+id/textView4"
        android:layout_below="@+id/imgbImage1"
        android:layout_alignStart="@+id/imgbImage1" />







</RelativeLayout>
